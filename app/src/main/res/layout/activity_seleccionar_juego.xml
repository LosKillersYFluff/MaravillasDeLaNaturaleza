<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    tools:context=".SeleccionarJuegoActivity">

    <RelativeLayout
        android:id="@+id/contenedor_titulo"
        android:layout_width="440dp"
        android:layout_height="305dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/titulo_madera"
        android:gravity="center">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Maravillas de la Naturaleza"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:fontFamily="@font/stay_pixel"
            android:layout_centerInParent="true"
            android:shadowColor="@color/colorBorde"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contenedor_botones"
        android:layout_width="540dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="10dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/fondomadera"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="abrirMinijuego1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minijuego 1"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pixellari"
                android:layout_centerInParent="true"
                android:shadowColor="@color/colorBorde"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="70dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/fondomadera"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="abrirMinijuego2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minijuego 2"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pixellari"
                android:layout_centerInParent="true"
                android:shadowColor="@color/colorBorde"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5" />
        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/regresar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/flecharegresar"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:layout_margin="10dp"/>

</RelativeLayout>
