<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="16dp">

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntaje: 99999"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/fondo_transparente"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/pixellari" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/puntaje"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/puzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/puzzle_border">

            <!-- Puzzle pieces go here -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piezas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- Puzzle pieces go here -->
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Ganaste!"
        android:textSize="70sp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/mensaje_background"
        android:padding="16dp"
        android:fontFamily="@font/stay_pixel" />

    <!-- Animal section -->
    <LinearLayout
        android:id="@+id/contenedor_animales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/contenedor_background"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animales"
            android:textSize="70sp"
            android:textColor="@color/white"
            android:fontFamily="@font/stay_pixel"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_background"
            android:padding="8dp" />

        <!-- Animal images and descriptions go here -->

    </LinearLayout>

    <!-- Flower section -->
    <LinearLayout
        android:id="@+id/contenedor_flores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/contenedor_background"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flores"
            android:textSize="70sp"
            android:textColor="@color/white"
            android:fontFamily="@font/stay_pixel"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_background"
            android:padding="8dp" />

        <!-- Flower images and descriptions go here -->

    </LinearLayout>

</RelativeLayout>
