<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="0dp"
    android:layout_gravity="center">

    <ImageButton
        android:id="@+id/regresar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/flecharegresar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:onClick="onRegresarClicked"
        />

    <RelativeLayout
        android:id="@+id/contenedor_titulo"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/titulomadera"
        >

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tutorial"
            android:shadowColor="@color/colorBorde"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/stay_pixel"
            android:layout_centerInParent="true" /> />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contenedor_tutorial"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/fondo_transperente"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab1_button"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Escoger la mejor respuesta"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/fondomadera"
                android:onClick="mostrarTab1"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/tab2_button"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Rompecabezas"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/fondo_madera"
                android:onClick="mostrarTab2" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#AA7959"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/titulo_texto_tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/titulo_info_tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usa w,a,s,d para moverte"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp" />

                <ImageView
                    android:id="@+id/imagen_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/your_image" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/titulo_texto_tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seg"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/titulo_info_tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Este es la segunda parte z."
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp" />

                <ImageView
                    android:id="@+id/imagen_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/your_image" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
