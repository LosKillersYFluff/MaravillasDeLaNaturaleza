<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".CreditosActivity">

    <ImageButton
        android:id="@+id/regresar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/flecharegresar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:onClick="onRegresarClicked"
        />

    <RelativeLayout
        android:id="@+id/contenedor_titulo"
        android:layout_width="300dp"
        android:layout_height="105dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/titulomadera"
        android:padding="10dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créditos"
            android:shadowColor="@color/colorBorde"
            android:textSize="45sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/stay_pixel"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenedor_creditos"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/fondomadera"
        android:padding="20dp"
        android:scaleX="1.95"
        android:scaleY="1.75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/texto_creditos1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Líder José Macre"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="150dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/texto_creditos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol Carlos Rodriguez"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol Stephanie Bingham"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol Jaider Rico"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol Didier Villalaz"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>