<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".InfoAlbumActivity">

    <ImageButton
        android:id="@+id/regresar"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:background="@drawable/flecharegresar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:onClick="onRegresarClicked"/>

    <ImageButton
        android:id="@+id/home"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/inicio"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:onClick="onHomeClicked"/>

    <RelativeLayout
        android:id="@+id/contenedor_info"
        android:layout_width="620dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:background="@drawable/fondo_transparente"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="#aa7959"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del animal"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informacion del animal"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top1"
            android:layout_width="245dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="92dp"
            android:layout_marginStart="4dp"
            android:background="#aa7959"
            android:padding="10dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/especie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especie:"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/Pixellari"/>

                <TextView
                    android:id="@+id/info_especie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="1dp"
                    android:text="Esta es la especie"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/Pixellari" />


                <TextView
                    android:id="@+id/peso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso:"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/Pixellari"
                    android:layout_marginTop="28dp"
                    android:layout_marginStart="2dp"/>

                <TextView
                    android:id="@+id/info_peso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="28dp"
                    android:text="Este es el peso"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/Pixellari" />

                <TextView
                    android:id="@+id/habitat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habitat:"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/Pixellari"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/info_habitat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="55dp"
                    android:text="Esta es el habitat"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/Pixellari" />

    </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top2"
            android:layout_width="145dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="110dp"
            android:layout_marginStart="130dp"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cerrarsesion"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </RelativeLayout>
