<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".CaracteristicaActivity">

    <!-- Home icon -->
    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/inicio" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="336dp">

        <ImageButton
            android:id="@+id/continuar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/fondomadera"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/stay_pixel"
            android:text="Continuar"
            android:textColor="@android:color/white"
            android:textSize="16sp" /> <!-- TamaÃ±o reducido -->

    </RelativeLayout>

    <!-- Image container -->
    <ImageView
        android:id="@+id/left_image"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@+id/home_icon"
        android:layout_marginTop="5dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/fondo_transparente"
        android:scaleType="centerInside" />

    <!-- Text views -->
    <TextView
        android:id="@+id/text1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/left_image"
        android:layout_toEndOf="@id/left_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/fondo_transparente1"
        android:text="Texto 1"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_alignStart="@id/text1"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondo_transparente1"
        android:text="Texto 2"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_alignStart="@id/text1"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondo_transparente1"
        android:text="Texto 3"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_alignStart="@id/text1"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondo_transparente1"
        android:text="Texto 4"
        android:textSize="18sp"
        android:textColor="@android:color/white" />


</RelativeLayout>