<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PerfilActivity">

    <ImageButton
        android:id="@+id/regresar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/flecharegresar"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:id="@+id/contenedor_titulo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/titulomadera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/stay_pixel"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:shadowColor="@color/colorBorde"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenedor_info"
        android:layout_width="500dp"
        android:layout_height="280dp"
        android:layout_below="@+id/contenedor_titulo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fondo_transparente"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="230dp"
            android:layout_height="233dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/fondo_chocolate"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dejanos tu comentario"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/stay_pixel"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escribe tu comentario aquÃ­"
                android:textSize="20sp"
                android:fontFamily="@font/pixellari"
                android:textColor="@android:color/white"
                android:layout_marginTop="65dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top1"
            android:layout_width="195dp"
            android:layout_height="124dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="112dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/fondo_chocolate"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/especie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pixellari"/>

            <TextView
                android:id="@+id/info_especie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"
                android:text="Usuario"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pixellari" />


            <TextView
                android:id="@+id/peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo:"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pixellari"
                android:layout_marginTop="40dp"
                android:layout_marginStart="2dp"/>

            <TextView
                android:id="@+id/info_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:text="Este es el correo"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pixellari" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp"
        android:layout_marginStart="270dp"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/perfil"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/botones_editar_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="0dp">

        <ImageButton
            android:id="@+id/boton_editar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/fondomadera"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/stay_pixel"
            android:shadowColor="@color/colorBorde"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:text="Editar"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="30dp">

        <ImageButton
            android:id="@+id/boton_eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/fondomadera"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/stay_pixel"
            android:shadowColor="@color/colorBorde"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:text="eliminar"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
